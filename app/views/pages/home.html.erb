<div style="position: relative;
            align: center;
            width  : 200px;
            margin : 0 auto;">

<%= form_tag(search_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
<%= submit_tag "Search Events" %>
<% end %>


</div>
<h1> Welcome 
    <%= @person.first_name %> <%= @person.last_name %>!!!

  </h1>
<div style = "float: left">
	<%= link_to 'Publish Event', new_event_path %><br>
	<%= link_to 'Events I attended', events_path %><br>
	<%= link_to 'Search Summary', events_path %><br>
</div>
<hr>
<div style="position: relative;
            align: center;
            width  : 740px;
            margin : 0 auto;">

    <% @events.each do |event| %>
    <%= link_to event.title, event %>
      <%#  <td><%= link_to 'Show', event -%><%# </td>  -%>
      <br>
     <% end %>
     <%= will_paginate @events %>
</div>
<div style = "float:right">
	<%= link_to 'Sort Events', events_path %><br>
	<%= link_to 'Filter Events', events_path %><br>
</div>
<hr>



