<% content_for :head do %>
   <%= stylesheet_link_tag 'theme' %>
   <%= stylesheet_link_tag 'pagination' %>
   <%= stylesheet_link_tag 'carousel' %>
<% end %>



<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li><%= link_to 'Publish Event', new_event_path %></li>
            <li><%= link_to 'Events I attended', history_path %></li>
            <li><%= link_to 'Sort Events', events_path %></li>
            <li><%= link_to 'Filter Events', pages_path %></li>            
          </ul>
        </div>
      

<h1><i>Welcome <%= @person.first_name %> <%= @person.last_name %>!!!</i> </h1>

      <div class="col-md-10">
      <% @events.each do |event| %>
            <div class="col-md-5">
              <img class="img-thumbnail" src="<%= event.image %>" alt="Food img" width="200" height="200">
              <h2><%= link_to event.title, event %></h2>
              <p><p><%= event.description %> This event is on <%= event.event_date.strftime("%B, %d %Y") %> at <%= event.event_time.strftime("%I:%M%p") %> </p></p>                 
              <p><%= link_to "View details &raquo;".html_safe, event, class: "btn btn-default" %></p>
            </div>

      <% end %>
      </div>
      </div>
</div>

<div class="apple_pagination">
      <div clas="page_info">
        <%= page_entries_info @events %>
      </div>
      <%= will_paginate @events, :container => false %>
    </div>

  

