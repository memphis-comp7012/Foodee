<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>

<h1> Welcome Full name!!!</h1>
<ul>
	<li><%= link_to 'Publish Event', new_event_path %></li>
	<li><%= link_to 'Events I attended', events_path %></li>
	<li><%= link_to 'Search Summary', events_path %></li>
</ul>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Event date</th>
      <th>Event time</th>
      <th>Validity</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.event_date %></td>
        <td><%= event.event_time %></td>
        <td><%= event.validity %></td>
        <td><%= event.image %></td>
        <td><%= event.link %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
	<li><%= link_to 'Log out', new_event_path %></li>
	<li><%= link_to 'Sort Events', events_path %></li>
	<li><%= link_to 'Filter Events', events_path %></li>
</ul>

