<h1>Filter Events</h1>
<hr>
<div style="position: relative;
            align: center;
            width  : 740px;
            margin : 0 auto;">

    <% @events.each do |event| %>
    <%= link_to event.title, event %>
      <%#  <td><%= link_to 'Show', event -%><%# </td>  -%>
      <br>
     <% end %>
</div>
<hr>
<div style="position: relative;
            align: center;
            width  : 900px;
            margin : 0 auto;">
	<%= form_tag(events_path, :method => "get", id: "filter-form") do %>
		<%= text_field_tag :filter, params[:filter], placeholder: "filter events with respect to title, date or time", size: 100 %>
	<%= submit_tag "Filter" %>
	<% end %>
	<%= form_tag(locations_path, :method => "get", id: "filter-form") do %>
		<%= text_field_tag :filter, params[:filter], placeholder: "filter events with respect to location", size: 100 %>
	<%= submit_tag "Filter" %>
	<% end %>
  <%= form_tag(foods_path, :method => "get", id: "filter-form") do %>
    <%= text_field_tag :filter, params[:filter], placeholder: "filter events with respect to Foods", size: 100 %>
  <%= submit_tag "Filter" %>
  <% end %>
  <%= form_tag(keywords_path, :method => "get", id: "filter-form") do %>
    <%= text_field_tag :filter, params[:filter], placeholder: "filter events with respect to Keywords", size: 100 %>
  <%= submit_tag "Filter" %>
  <% end %>
</div>
<div>
	<%=link_to 'Back to Home', root_path %>
</div>