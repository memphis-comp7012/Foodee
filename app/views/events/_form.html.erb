<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @event.validity? %>
  <div>
    <%= f.label :Mark_as_Invalid %>
    <%= f.radio_button :validity, "true", checked: true %>
    No 
    <%= f.radio_button :validity, "false" %>
    Yes
  </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br>
    <%= f.date_select :event_date %>
  </div>
  <div class="field">
    <%= f.label :event_time %><br>
    <%= f.time_select :event_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <%#<div class="field">
    <%= f.label :validity %><br>
   <%# <%= f.check_box :validity %>
  <%#</div>-%>
  <div class="field">
    <%= f.collection_check_boxes(:keyword_ids, Keyword.all, :id, :tag) %>
  </div>
  <div class="field">
    <%= f.label :Location %>
    <%= f.fields_for @event.location do |l| %><br>
    <div>
    <%= l.text_field :department %>
    <%= l.text_field :building %>
    <%= l.text_field :floor %>
    <%= l.text_field :room %>
  </div>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
