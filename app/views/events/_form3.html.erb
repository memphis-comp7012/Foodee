<%= form_for @event, html: { multipart: true } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>      
    </div>
  <% end %>

  <%= f.hidden_field :validity, :value => true %>
  <%= f.hidden_field :person_id, :value => current_user.person.id %>
  
    <div class="field">
    <%= f.label :title , placeholder: "Free Food Event"%>  <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br>
    <%= f.date_select :event_date %>
  </div>
  <div class="field">
    <%= f.label :event_time %><br>
    <%= f.time_select :event_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :keywords %>
    <%= f.collection_check_boxes(:keyword_ids, Keyword.all, :id, :tag) %>
  </div>
  <div class="field">
    <%= f.label :foods %>
    <%= f.collection_check_boxes(:food_ids, Food.all, :id, :item) %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.fields_for :location do |l| %><br>
    <div>
    <%= l.text_field :department, placeholder: "Department" %>
    <%= l.text_field :building, placeholder: "Building" %>
    <%= l.text_field :floor, placeholder: "Floor" %>
    <%= l.text_field :room, placeholder: "Room" %>
  </div>
  <% end %>
  </div>
  <div class="field">
    <%= f.label "Upload Image (Allowd only jpg, jpeg, gif, png image formats):" %> <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

